  "components": {
    "schemas": {
      "BadGateway": {
        "title": "BadGateway",
        "type": "object",
        "properties": {},
        "description": "This response is reserved by Product Gateway."
      },
      "BatteryDataRequest": {
        "title": "BatteryDataRequest",
        "required": ["productCode"],
        "type": "object",
        "properties": {
          "productCode": {
            "title": "Product Code",
            "type": "string",
            "description": "The product code used by the manufacturer",
            "examples": "MPP48V"
          }
        }
      },
      "BatteryDataResponse": {
        "title": "BatteryDataResponse",
        "required": [
          "manufacturer",
          "productCode",
          "name",
          "cellType",
          "capacity",
          "energy",
          "voltage",
          "peakDischargingPower",
          "peakChargingPower",
          "continuousPower",
          "standbyConsumption",
          "cycleLife",
          "dimensions",
          "weight",
          "operatingTemperature",
          "ipRating",
          "maxCoolantPressure",
          "standardsCompliance"
        ],
        "type": "object",
        "properties": {
          "manufacturer": {
            "title": "Manufacturer",
            "type": "string",
            "description": "The manufacturer of the battery",
            "examples": "Valmet Automotive"
          },
          "productCode": {
            "title": "Product Code",
            "type": "string",
            "description": "The product code used by the manufacturer",
            "examples": "MPP48V"
          },
          "name": {
            "title": "Product Name",
            "type": "string",
            "examples": "Modular Power Pack, 48 V"
          },
          "cellType": {
            "title": "Cell Type",
            "allOf": [
              {
                "$ref": "#/components/schemas/CellType"
              }
            ],
            "examples": "lithium-titanate"
          },
          "capacity": {
            "title": "Capacity",
            "type": "number",
            "description": "Battery capacity in kWh",
            "examples": 2.2
          },
          "energy": {
            "title": "Energy (Ah)",
            "type": "number",
            "description": "Energy, Ah [1C @ 25°C]",
            "examples": 46.0
          },
          "voltage": {
            "title": "Voltage",
            "allOf": [
              {
                "$ref": "#/components/schemas/Voltage"
              }
            ],
            "description": "Information about the voltage of the battery"
          },
          "peakDischargingPower": {
            "title": "Peak Discharging Power [kW]",
            "type": "number",
            "examples": 20.0
          },
          "peakChargingPower": {
            "title": "Peak Charging Power [kW]",
            "type": "number",
            "examples": 20.0
          },
          "continuousPower": {
            "title": "Continuous Power [kW]",
            "type": "number",
            "examples": 10.0
          },
          "standbyConsumption": {
            "title": "Standby Power Consumption [W]",
            "type": "number",
            "examples": 1.0
          },
          "cycleLife": {
            "title": "Cycle Life",
            "type": "integer",
            "description": "Minimum number of cycles the battery can be recharged to at least 80% of initial capacity",
            "examples": 20000
          },
          "dimensions": {
            "title": "Dimensions",
            "allOf": [
              {
                "$ref": "#/components/schemas/Dimensions"
              }
            ],
            "description": "Physical dimensions of the battery"
          },
          "weight": {
            "title": "Weight [kg]",
            "type": "number",
            "description": "Total dry weight [kg]",
            "examples": 41.0
          },
          "operatingTemperature": {
            "title": "Operating Temperature [°C]",
            "allOf": [
              {
                "$ref": "#/components/schemas/OperatingTemperature"
              }
            ]
          },
          "ipRating": {
            "title": "IP Rating",
            "allOf": [
              {
                "$ref": "#/components/schemas/IPCode"
              }
            ],
            "examples": "IP6K9K"
          },
          "maxCoolantPressure": {
            "title": "Max Coolant Pressure [bar]",
            "type": "number",
            "examples": 3.5
          },
          "standardsCompliance": {
            "title": "Standards Compliance",
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string"
            },
            "examples": [
              "ECE R10",
              "ISO 13849 PL C",
              "ECE R100",
              "IEC 62061 SIL 2",
              "UN 38.3",
              "IEC 61508 SIL 2",
              "ISO 16750"
            ]
          }
        }
      },
      "CellType": {
        "title": "CellType",
        "enum": ["lithium-titanate", "lithium-ion polymer"],
        "type": "string",
        "description": "An enumeration."
      },
